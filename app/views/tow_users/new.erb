<div class="container">
  <div class="row">
    <h2>Signup</h2>
    <div class="col-sm-6 col-sm-offset-3 text-left">
      <div class="form-top-left">
      <% if @errors %>
        <p class="error"><%= @errors %></p>
      <% end %>
      </div>
      <div class="form-top-right">
        <i class="fa fa-pencil"></i>
      </div>
    <div class="form-bottom">
      <form role="form" action="/signup" method="post" class="signup-form">
        <div class="form-group">
          <label for="form-type">Role</label>
          <select class="form-control" name="tow_user[type]">
            <option value="Dispatcher">Dispatcher</option>
            <option value="Driver">Driver</option>
          </select>
        </div>
        <div class="form-group">
          <label for="form-email">Name</label>
          <input type="text" name="tow_user[name]" placeholder="Name" class="form-name form-control" id="form-name">
        </div>
        <div class="form-group">
          <label for="form-email">Email</label>
          <input type="email" name="tow_user[email]" placeholder="Email" class="form-email form-control" id="form-email">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="tow_user[password]" placeholder="Password" class="form-password form-control" id="form-password">
        </div>
        <button type="submit" class="btn">Sign Up</button>
      </form>
      <p style="margin-top: 10px;">Already have an account? <a href="/login" type="submit"> Log in now.</a></p>
    </div>
    </div>
  </div>
</div>