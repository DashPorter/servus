<div class="container">
  <div class="row">
    <h2>Login</h2>
    <div class="col-sm-6 col-sm-offset-3 text-left">
      <% if @errors %>
      	<p class="error"><%= @errors %></p>
      <% end %>
      <form role="form" action="/login" method="post" >
        <div class="form-group">
          <label for="form-username">Email</label>
          <input type="text" name="email" placeholder="example@gmail.com" class="form-username form-control" id="form-username">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" placeholder="Password..." class="form-password form-control" id="form-password">
        </div>
          <button type="submit" class="btn">Log In</button>
      </form>
      <p style="margin-top: 10px;">Don't have an account? <a href="/signup" type="submit"> Sign up now.</a></p>
    </div>
  </div>
</div>